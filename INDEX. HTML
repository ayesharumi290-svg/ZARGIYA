<script>
const btn=document.getElementById('btn');
const box=document.getElementById('messageBox');
const music=document.getElementById('bgMusic');
const flame=document.querySelector('.flame');
let step=0;

function typeText(text){
  box.innerHTML="";
  let i=0;
  const t=setInterval(()=>{
    box.innerHTML+=text.charAt(i);
    i++;
    if(i>=text.length) clearInterval(t);
  },40);
}

btn.onclick=()=>{
  if(step===0){
    music.play();
    typeText("ğŸ’Œ My Love Letter:\nYou are my safest place and my sweetest thought.\nEvery smile of yours makes my world brighter.\nIâ€™m so grateful that my heart chose you.");
    btn.innerText="Next â¤ï¸";
  }
  else if(step===1){
    flame.classList.add('blown');
    typeText("âœ¨ Make a wish âœ¨");
    btn.innerText="Next ğŸ’–";
  }
  else if(step===2){
    typeText("ğŸ˜‰ Flirty Message:\nEvery time you look at me, my heart forgets how to behave.\nYou donâ€™t just steal glancesâ€¦ you steal my breath.");
    btn.innerText="Next ğŸ˜˜";
  }
