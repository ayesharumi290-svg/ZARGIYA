// Countdown to 9 Feb
let now=new Date();
let target=new Date(now.getFullYear(),1,9);
if(target<now) target=new Date(now.getFullYear()+1,1,9);

setInterval(()=>{
  let diff=target-new Date();
  if(diff>0){
    let d=Math.floor(diff/(1000*60*60*24));
    let h=Math.floor(diff/(1000*60*60)%24);
    let m=Math.floor(diff/(1000*60)%60);
    document.getElementById('countdown').innerText=`Countdown: ${d}d ${h}h ${m}m`;
  }
},1000);
